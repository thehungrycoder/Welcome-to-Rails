<p id="notice"><%= notice %></p>

<h1><%= @article.title %></h1>

<p>
  <%= @article.content %>
</p>

<h4>Comments</h4>
<% @article.comments.each do |comment| %>
  <div>
    <p><strong><%= comment.name %></strong></p>
    <p><%= comment.content %></p>
    <hr/>
  </div>
<% end %>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
