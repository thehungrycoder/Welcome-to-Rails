<h1>Listing posts</h1>

<table class="table">
  <thead>
  <tr>
    <th>Title</th>
    <th>Tags</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.tags %></td>
      <td>
        <%= link_to 'Show', post, :class => 'btn btn-mini' %>
         <%= link_to 'Edit', edit_post_path(post), :class => 'btn btn-mini' %>
         <%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete, :class => 'btn btn-mini btn-danger' %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br/>

<%= link_to 'New Post', new_post_path %>
